@model BlogApp.Dotnet.ApplicationCore.DTOs.UserDTO

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" href="~/Style/Users.css">
</head>

<h1 class="pt-2">Edit Information</h1>
<hr />

<form id="edit-form" class="form" asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label py-2"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label py-2"></label>
                <input asp-for="LastName" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label py-2"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label py-2"></label>
                <br />
                <span class="text-danger hidden d-none">@Html.ValidationMessageFor(m => m.Password)</span>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @data_val = "false", @class = "form-control" } })
            </div>
        </div>
    </div>
    <br>

    <input id="btn-submit" type="button" value="Cancel" onclick="location.href='@Url.Action("Users", "Identity")'" class="btn btn-outline-dark" />
    <input type="submit" value="Save" class="btn btn-outline-dark" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
