@model BlogApp.Dotnet.ApplicationCore.DTOs.UserDTO

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/Style/Login.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>

<body>
    <section class="login-clean">
        <form id="login-form" method="post">
            <div class="illustration"><i class="icon ion-ios-navigate"></i></div>
            <div class="text-danger">@ViewData["GeneralErorrs"]</div>
            <br />
            <div class="form-group">
                <input asp-for="Email" class="form-control" type="email" name="email" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" type="password" name="password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button id="btn-login-submit" class="btn btn-primary btn-block btn-outline-dark" type="submit">Log In</button>
            </div>
            <a class="options" href="@Url.Action("Register", "Identity")">New here? Click to register!</a>
        </form>
    </section>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" crossorigin="anonymous"></script>
</body>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}