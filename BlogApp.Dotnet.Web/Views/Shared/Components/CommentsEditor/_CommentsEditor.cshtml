@model BlogApp.Dotnet.ApplicationCore.DTOs.CommentsDTO

@{
    ViewData["Title"] = "Create";
}

<body>
    <form method="post" asp-action="Create" asp-controller="Comments" id="comments-editor">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <div>
                <textarea asp-for="Content" class="form-control" rows="5">
                </textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <input type="submit" value="Add" class="btn btn-outline-dark" id="btn-submit" />
            </div>
        </div>
        <input asp-for="PostID" value="@Model.PostID" type="number" class="visually-hidden" />
        <input asp-for="ID" value="@Model.ID" type="number" class="visually-hidden" />
        <input asp-for="ParentID" value="@Model.ParentID" type="number" class="visually-hidden" />
        <input asp-for="UserID" value="@Model.UserID" class="visually-hidden" />
    </form>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}