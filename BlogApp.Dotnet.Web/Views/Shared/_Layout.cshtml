<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blog App </title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/Icon.ico">
    <link rel="stylesheet" href="~/Style/Common_Style.css">
    @RenderSection("styles", false)
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>
<body class=" bg-light">
    <div class="main-and-footer d-flex flex-column">
        <header class="sticky-top">
            <nav class="navbar navbar-expand-lg bg-theme-color border border-top-0 border-start-0 border-end-0">
                <div class="container-fluid">
                    <a asp-controller="Posts" asp-action="Index">
                        <img src="~/Images/Icon.ico" width="30" height="30">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <img src="~/Images/menu-icon.ico" width="33" height="33">
                    </button>
                    <div class="collapse navbar-collapse" id="navbarContent">
                        <ul class="navbar-nav flex-grow-1">
                            <li>
                                <a class="nav-link active text-dark" aria-current="page" asp-area="" asp-controller="Posts" asp-action="Index">Home</a>
                            </li>
                            @if (User.IsInRole("Administrator"))
                            {
                                <li>
                                    <a class="nav-link active text-dark users" aria-current="page" asp-area="" asp-controller="Identity" asp-action="Users">Users</a>
                                </li>
                            }
                        </ul>
                        @(await Component.InvokeAsync("AccountArea", new {name = User.Identity.Name}))
                    </div>
                </div>
            </nav>
        </header>
        <main role="main" class="d-flex flex-elmnt-100-height">
            <div class="flex-grow-1 container-fluid bg-white container-body ps-5 pe-5 border border-top-0 border-bottom-0">
                @RenderBody()
            </div>
        </main>
    </div>
    <footer class="footer my-footer py-5 border border-bottom-0 border-start-0 border-end-0 bg-theme-color">
        <div class="container">
            &copy; 2021 - Blog App
        </div>
    </footer>
</body>
</html>
@await RenderSectionAsync("Scripts", required: false)
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

